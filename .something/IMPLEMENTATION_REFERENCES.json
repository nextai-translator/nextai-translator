      "key_patterns": [
        "2.0: Equivalent to ^2.0.0 (allows 2.x.x)",
        "=2.0.0: Exact version (not recommended)",
        "^2.0.0: Allows 2.x.x, prevents 3.0.0",
        "~2.0.0: Allows 2.0.x, prevents 2.1.0"
